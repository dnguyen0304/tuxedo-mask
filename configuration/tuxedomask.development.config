{
  "Development": {
    "logging": {
      "version": 1,
      "loggers": {
        "tuxedomask": {
          "level": "DEBUG",
          "handlers": ["file", "error_file"]
        }
      },
      "formatters": {
        "simple": {
          "format": "%(asctime)s.%(msecs)03d %(levelname)s %(message)s",
          "datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "json": {
          "class": "common.logging.formatters.JsonFormatter",
          "format": "{\"timestamp\": \"%(asctime)s.%(msecs)03d\", \"severity_level\": \"%(levelname)s\", \"message\": \"%(message)s\"}",
          "datefmt": "%Y-%m-%d %H:%M:%S"
        }
      },
      "handlers": {
        "file": {
          "class": "logging.handlers.TimedRotatingFileHandler",
          "level": "DEBUG",
          "filename": "/var/log/tuxedomask/tuxedomask.application.log",
          "when": "midnight",
          "encoding": "utf-8",
          "filters": ["stack_trace"],
          "formatter": "json"
        },
        "error_file": {
          "class": "logging.handlers.TimedRotatingFileHandler",
          "level": "ERROR",
          "filename": "/var/log/tuxedomask/tuxedomask.error.log",
          "when": "midnight",
          "encoding": "utf-8",
          "formatter": "simple"
        }
      },
      "filters": {
        "stack_trace": {
          "()": "tuxedomask.utilities.StackTraceFilter"
        }
      }
    },
    "postgresql": {
      "connection_string": "postgresql+psycopg2://tuxedomask:tuxedomask@localhost:5432/tuxedomask"
    },
    "services": {
      "tuxedomask": {
        "logger_name": "tuxedomask",
        "bcrypt_cost_factor": 0
      }
    }
  }
}
